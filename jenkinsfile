pipeline {
    agent {
        docker {
            image 'node:22.9.0'  // Use the Node.js Docker image with version 22.9.0
            args '-p 80:80'      // Port mapping if needed
        }
    }

    environment {
        DOCKER_IMAGE = 'test-app'
        DOCKERFILE_PATH = './dockerfile'
        NGINX_CONF_PATH = './nginx.conf'
        DIST_PATH = './dist/test-name'
    }

    stages {

        stage('Build Angular App') {
            steps {
                // Install dependencies and build the Angular app
                sh 'npm install'
                sh 'ng build --prod'
            }
        }

        stage('Build Docker Image') {
            steps {
                // Build the Docker image
                sh "docker build -t ${DOCKER_IMAGE} -f ${DOCKERFILE_PATH} ."
            }
        }

        stage('Run Docker Container') {
            steps {
                // Stop and remove any existing container
                sh "docker rm -f ${DOCKER_IMAGE} || true"
                // Run the Docker container
                sh "docker run -d -p 80:80 --name ${DOCKER_IMAGE} ${DOCKER_IMAGE}"
            }
        }
    }

    post {
        always {
            // Clean up Docker images and containers if needed
            sh "docker rmi ${DOCKER_IMAGE} || true"
        }
    }
}